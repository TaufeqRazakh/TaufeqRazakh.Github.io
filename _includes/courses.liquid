<div class="courses">
  <div
    class="table-responsive"
    style="max-height: 60vw"
  >
    <table class="table table-sm table-borderless">
      {% for item in categorized_sorted_courses %}
        <tr>
          <td scope="row" style="width: 20%">{{ item.year }}</td>
          <td>
            {% if item.inline %}
              {{ item.content | remove: '<p>' | remove: '</p>' }}
            {% else %}
              <a class="course-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </table>
  </div>
</div>
